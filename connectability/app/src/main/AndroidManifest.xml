<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.connectability">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/connectability"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- Main Activity (Sign-In Screen) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Create Account Activity -->
        <activity
            android:name=".CreateAccountActivity"
            android:exported="false" />

        <!-- Password Recovery Activity -->
        <activity
            android:name=".PasswordRecoveryActivity"
            android:exported="false" />

        <!-- Security Questions Activity -->
        <activity
            android:name=".SecurityQuestionsActivity"
            android:exported="false" />

        <!-- Profile Activity -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />

        <!-- Settings Activity -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false" />
    </application>

</manifest>
